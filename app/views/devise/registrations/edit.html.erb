<div class="user-edit-page">

  <%= render "partial/navbar" %>

  <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), class: "px-3", local: true, method: :patch do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="profile">
      <div class="profile-default-img"></div>
    </div>

    <div class="form-group">
      <%= f.text_field :nickname, class: "form-control", placeholder: "ニックネーム" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワードの確認" %>
    </div>

    
    <div class="form-group">
      <label class="form-text">生年月日</label>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>

    <div class="form-group">
      <%= f.text_field :prefecture_id, class: "form-control", placeholder: "都道府県" %>
    </div>

    <div class="form-group">
      <%= f.text_field :favorite_genre, class: "form-control", placeholder: "好きな馬コンテンツ(競馬、乗馬、ウマ娘など)" %>
    </div>

    <div class="form-group">
      <%= f.text_area :self_introduction, class: "form-control", placeholder: "自己紹介文", rows: "4" %>
    </div>

    <div class="user-edit__submit-btn">
      <%= f.submit "保存", class: "btn btn-block text-white" %>
    </div>
  <% end %>

</div>